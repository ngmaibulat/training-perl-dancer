{
	"name": "Perl Dev Container",
	"dockerFile": "Dockerfile",
	"appPort": [5000], // Add any ports you need to expose for your application
	"features": {
		"ghcr.io/devcontainers/features/node:1": {},
		"ghcr.io/guiyomh/features/vim:0": {}
	},
	"extensions": [
	  "visualstudioexptteam.vscodeintellicode", // Add any VS Code extensions you'd like to have pre-installed
	  "richterger.perl"
	],
	"settings": {
	  "perl.perl": "/usr/bin/perl", // Set the path to the Perl interpreter
	  "perl.perlInc": ["/usr/lib/perl5/site_perl/5.36.1"], // Set the @INC paths
	  "perl.lint": "perlcritic", // Optional: Configure linting (if you have perlcritic installed)
	  "perl.lintTheme": "default" // Optional: Set a linting theme
	}
  }
  